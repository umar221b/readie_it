<div class="centered no-cursor">
  <h1>Readie Read?</h1>
  <br />
  <br />
  <% if !@readie || @readie.readie_reads.size < 3 %>
  <h3>This Readie has not been read yet, check again later!</h3>
  <% else %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Number</th>
        <th>Date</th>
      </tr>
    </thead>
    <tbody>
      <% @readie.readie_reads.each_with_index do |r_r, i| %>
        <% next if i < 3 %>
        <tr>
          <td><%= i - 1 %></td>
          <td><%= r_r.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br />
  <p>
    Total number of reads is: <%= @readie.readie_reads.size %>
  </p>
  <% end %>
  <br />
  <%= link_to('Back', root_url, class: 'btn-back btn btn-lg back-show') %>
</div>

<script>
  $(function() {
  	$("body").css("background-color", "#e28332");
  });
</script>
