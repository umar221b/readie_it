<div class="split left not-selectable">
  <%= link_to new_readies_url do %>
    <div class="centered zoom">
      <h2>Create a Readie</h2>
      <p>Generate a new readie for a new email</p>
    </div>
  <% end %>
</div>

<div class="split right not-selectable">
  <a data-toggle="modal" data-target="#readie_token_modal">
    <div class="centered zoom">
      <h2>Check a Readie</h2>
      <p>Check whether an existing Readie got read yet</p>
    </div>
  </a>
</div>

<!-- Modal -->
<div id="readie_token_modal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <%= form_tag("/readies", method: :get) do %>
    <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Token</h4>
        </div>
        <div class="modal-body">
          <p>Enter the Readie token you were asked to store when you created the Readie:</p>

            <div class="form-group">
              <input class="form-control" id="token" placeholder="Enter token" name="token">
            </div>
        </div>
        <div class="modal-footer">
           <%= submit_tag("Find my Readie Reads!", class: "btn btn-success" ) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
